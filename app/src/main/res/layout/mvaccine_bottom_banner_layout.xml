<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:paddingBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/mvaccine_btm_banner_box"
        android:layout_width="328dp"
        android:layout_height="70.3dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/btmBannerIv"
            android:layout_marginLeft="15.7dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_marginLeft="17dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btmBannerIv">
            <TextView
                android:id="@+id/btmBannerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#464646"
                android:paddingBottom="2dp"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/btmBannerMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#90908f"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17.7dp"
            android:background="@drawable/mvaccine_btm_banner_plus"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



</LinearLayout>