<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

	<LinearLayout
		android:id="@+id/layout_detail_tilte"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:background="#060d23"
		android:gravity="right"
		android:orientation="vertical"
		android:padding="10dip">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Morpheus"
			android:textColor="#ffffff"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="Rich Push"
			android:textColor="#dddddd"
			android:textSize="10sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/layout_detail_text"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/layout_detail_tilte"
		android:gravity="left"
		android:orientation="vertical"
		android:padding="10dip">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="35dip"
				android:layout_marginTop="5dip"
				android:text="Title : "
				android:textColor="#333333"
				android:textSize="15sp" />

			<TextView
				android:id="@+id/text_detail_title"
				android:layout_width="wrap_content"
				android:layout_height="35dip"
				android:layout_marginTop="5dip"
				android:textColor="#000000"
				android:textSize="15sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="20dip"
				android:layout_marginTop="5dip"
				android:text="Message : "
				android:textColor="#333333"
				android:textSize="15sp" />

			<TextView
				android:id="@+id/text_detail_message"
				android:layout_width="wrap_content"
				android:layout_height="50dip"
				android:layout_marginTop="5dip"
				android:textColor="#000000"
				android:textSize="15sp" />

		</LinearLayout>

		<ImageView
			android:id="@+id/image_detail_img"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/layout_detail_text"
			android:layout_centerHorizontal="true"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_launcher"
			android:visibility="gone" />
	</LinearLayout>



</RelativeLayout>