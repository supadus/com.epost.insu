<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/layout_default_padding">

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_text_size"
                    android:textColor="@color/colorText_0"
                    android:text="@string/label_req_child_title"
                    android:textStyle="bold"/>-->


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="03"
                        android:textColor="@color/colorText_11"
                        android:textSize="@dimen/label_tobig_size_20"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/label_req_step_3"
                        android:textColor="@color/colorText_10"
                        android:textSize="@dimen/label_tobig_size_20" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">


                    <!-- 가이드 Text_1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가"
                                android:textSize="@dimen/label_small_size"
                                android:visibility="invisible"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:layout_width="@dimen/red_oval_dot_size"
                                android:layout_height="@dimen/red_oval_dot_size"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/oval_grey"
                                tools:ignore="ContentDescription" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/guide_add_doc_c3_1"
                            android:textColor="@color/colorText_8"
                            android:textSize="@dimen/label_big_size" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/guide_add_doc_c3_2"
                            android:textColor="@color/colorText_8"
                            android:textSize="@dimen/label_small_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/guide_add_doc_c3_3"
                            android:textColor="@color/colorText_8"
                            android:textSize="@dimen/label_small_size" />

                    </LinearLayout>
                    <!--

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="5dp"
                                        tools:ignore="RtlHardcoded">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="@dimen/label_small_size"
                                                android:text="@string/desc_number_2"
                                                android:visibility="invisible"
                                                tools:ignore="HardcodedText" />

                                            <ImageView
                                                android:layout_width="@dimen/red_oval_dot_size"
                                                android:layout_height="@dimen/red_oval_dot_size"
                                                android:adjustViewBounds="true"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/oval_red"
                                                android:layout_gravity="center"/>

                                        </FrameLayout>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingLeft="5dp"
                                            android:textSize="@dimen/label_small_size"
                                            android:textColor="@color/colorText_0"
                                            android:text="@string/guide_add_doc_c3_4"/>

                                    </LinearLayout>
                    -->


                    <!-- 가이드 Text_1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가"
                                android:textSize="@dimen/label_small_size"
                                android:visibility="invisible"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:layout_width="@dimen/red_oval_dot_size"
                                android:layout_height="@dimen/red_oval_dot_size"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/oval_grey"
                                tools:ignore="ContentDescription" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/guide_add_doc_c3_5"
                            android:textColor="@color/colorText_8"
                            android:textSize="@dimen/label_big_size" />

                    </LinearLayout>


                </LinearLayout>

                <!-- 청구자정보 -->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_req_parent"
                    android:textColor="@color/colorText_10"
                    android:textSize="@dimen/label_tobig_size_20" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <!-- 이름 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/txt_name"
                        android:textColor="@color/colorText_9"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingRight="@dimen/layout_default_padding"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorText_0"
                        android:textSize="@dimen/label_default_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#CDCDCD" />

                    <!-- 주민번호 -->

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/txt_jumin"
                        android:textColor="@color/colorText_9"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textResidentNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingRight="@dimen/layout_default_padding"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorText_0"
                        android:textSize="@dimen/label_default_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parentRelativeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textRelation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/desc_relation"
                        android:gravity="left"
                        android:text="@string/label_relation_type"
                        android:textColor="@color/colorText_9"
                        android:textSize="@dimen/label_default_size"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:text="@string/guide_relation_type1"
                        android:textColor="@color/colorText_9"
                        android:textSize="@dimen/label_small_size"
                        tools:ignore="RtlHardcoded" />

                    <com.epost.insu.control.ButtonGroupView
                        android:id="@+id/btnGroupRelation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp" />

                    <!-- 수익자 이름 입력 layout -->
                    <LinearLayout
                        android:id="@+id/beneficiaryName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:gravity="left"
                            android:text="@string/guide_relation_type2"
                            android:textColor="@color/colorText_9"
                            android:textSize="@dimen/label_small_size"
                            tools:ignore="RtlHardcoded" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:splitMotionEvents="false">

                            <include
                                android:id="@+id/labelEditBeneficiaryName"
                                layout="@layout/layout_label_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textParentType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/desc_parent_type"
                        android:gravity="left"
                        android:text="@string/label_parent_type"
                        android:textColor="@color/colorText_9"
                        android:textSize="@dimen/label_small_size"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                    <com.epost.insu.control.ButtonGroupView
                        android:id="@+id/btnGroupParentType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 필수사항 라벨 -->
                <LinearLayout
                    android:id="@+id/linRequire"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/label_essential"
                        android:textColor="@color/colorText_10"
                        android:textSize="@dimen/label_tobig_size_20" />

                    <!-- 필수사항 입력 ViewGroup -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edtMobile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="true"
                                android:hint="@string/hint_mobile"
                                android:imeOptions="actionDone"
                                android:inputType="phone"
                                android:paddingLeft="@dimen/layout_default_padding"
                                android:paddingTop="10dp"
                                android:paddingRight="@dimen/layout_default_padding"
                                android:paddingBottom="10dp"
                                android:textColor="@color/colorText_0"
                                android:textColorHint="@color/colorHint"
                                android:textSize="@dimen/label_default_size" />

                            <ImageButton
                                android:id="@+id/btnMod"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/desc_mod_mobile"
                                android:padding="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_modify"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#CDCDCD" />

                        <!-- SMS 알림 동의 레이아웃 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/layout_default_padding"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:id="@+id/textLabelSMS"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:contentDescription="@string/desc_sms_agree_no"
                                android:text="@string/label_flag_agree_notify"
                                android:textColor="@color/colorText_0"
                                android:textSize="@dimen/label_default_size" />

                            <com.epost.insu.control.SwitchingControl
                                android:id="@+id/switchingNoti"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 주소 레이아웃 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/layout_default_padding"
                                android:text="@string/label_addr"
                                android:textColor="@color/colorText_0"
                                android:textSize="@dimen/label_default_size"
                                tools:ignore="RtlHardcoded,RtlSymmetry" />

                            <LinearLayout
                                android:id="@+id/linBtnSearchAddr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/btn_g_g_selector"
                                android:clickable="true"
                                android:contentDescription="@string/desc_search_addr"
                                android:orientation="horizontal"
                                android:paddingLeft="15dp"
                                android:paddingTop="5dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="5dp"
                                tools:ignore="RtlHardcoded">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/btn_search_addr"
                                    android:textColor="@color/colorHint"
                                    android:textSize="@dimen/label_small_size" />

                                <ImageView
                                    android:layout_width="13dp"
                                    android:layout_height="13dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_search"
                                    tools:ignore="ContentDescription,RtlHardcoded" />
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="#CDCDCD" />

                        <TextView
                            android:id="@+id/textAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="3"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/colorText_0"
                            android:textSize="@dimen/label_default_size" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 친권자 동의 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_parent_agree"
                    android:textColor="@color/colorText_10"
                    android:textSize="@dimen/label_tobig_size_20" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_white"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textParentAgree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:contentDescription="@string/desc_parent_agree"
                            android:gravity="left"
                            android:text="@string/label_parent_together"
                            android:textColor="@color/colorText_8"
                            android:textSize="@dimen/label_small_size"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <com.epost.insu.control.ButtonGroupView
                            android:id="@+id/btnGroupParentAgree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>

                    <!-- 청구자 외의 부모 이름 입력 layout -->
                    <LinearLayout
                        android:id="@+id/anotherParentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:splitMotionEvents="false">

                        <include
                            android:id="@+id/labelEditAnotherParentName"
                            layout="@layout/layout_label_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parentAloneReasonGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textParentAloneReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:contentDescription="@string/desc_parent_alone_reason"
                            android:gravity="left"
                            android:text="@string/label_parent_alone_reason"
                            android:textColor="@color/colorText_8"
                            android:textSize="@dimen/label_small_size"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <com.epost.insu.control.ButtonGroupView
                            android:id="@+id/btnGroupParentAloneReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 피보험자(자녀) -->
                <!-- 정보입력(이름/주민등록번호) 라벨 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_req_child"
                    android:textColor="@color/colorText_10"
                    android:textSize="@dimen/label_tobig_size_20" />


                <LinearLayout
                    android:id="@+id/relChildInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_white"
                    android:orientation="vertical"
                    android:splitMotionEvents="false">

                    <!-- 이름 입력 layout -->
                    <include
                        android:id="@+id/labelEditName"
                        layout="@layout/layout_label_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:labelFor="@+id/edtResident_1"
                            android:paddingLeft="10dp"
                            android:paddingTop="15dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="15dp"
                            android:textStyle="bold"
                            android:text="@string/label_resident_number"
                            android:textColor="@color/colorText_9"
                            android:textSize="@dimen/label_small_size"
                            tools:ignore="RtlHardcoded" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:splitMotionEvents="false">




                            <EditText
                                android:id="@+id/edtResident_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/desc_edt_resident_first"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLines="1"
                                android:minWidth="100dp"
                                android:paddingLeft="15dp"
                                android:textColor="@color/colorText_0"
                                android:textSize="16dp"
                                tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="7dp"
                                android:background="#9e9e9e"
                                tools:ignore="RtlHardcoded" />

                            <RelativeLayout
                                android:id="@+id/resident_relInput"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.7"
                                android:splitMotionEvents="false">

                                <include
                                    android:id="@+id/resident_relInput_sub"
                                    layout="@layout/transkey_user_editbox_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true" />

                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <!-- 선택사항 라벨 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_req_child_choice"
                    android:textColor="#4B4B4B"
                    android:textSize="@dimen/label_default_size"
                    android:visibility="gone" />

                <!-- 직장 하시는일 레이아웃 -->
                <LinearLayout
                    android:id="@+id/labelTextCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edtCompany"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="@string/label_company_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/layout_default_padding"
                        android:paddingRight="@dimen/layout_default_padding"
                        android:privateImeOptions="defaultInputmode=korean"
                        android:textColor="@color/colorText_0"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/label_default_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#CDCDCD" />

                    <EditText
                        android:id="@+id/edtJob"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="false"
                        android:hint="@string/label_job"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingLeft="@dimen/layout_default_padding"
                        android:paddingRight="@dimen/layout_default_padding"
                        android:privateImeOptions="defaultInputmode=korean"
                        android:textColor="@color/colorText_0"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/label_default_size" />

                </LinearLayout>

                <include
                    layout="@layout/c_btn_fill_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/keypadContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- mVaccine 키패드 click effect 포지션 위치를 위해 타이틀바 높이인 ?attr/actionBarSize 만큼 marginTop 적용 -->
    <RelativeLayout
        android:id="@+id/keypadBallon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp" />

</FrameLayout>

