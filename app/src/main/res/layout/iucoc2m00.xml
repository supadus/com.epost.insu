<?xml version="1.0" encoding="utf-8"?>

<!-- 공통 > 공동인증로그인 > 스마트보험 서비스 이용신청 (화면 ID : IUCOC2M00) - #53 -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <ScrollView
            android:id="@+id/fragment_keyGuard_scl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_default_padding">

                    <!-- 서비스 안내 라벨 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/label_guide_service"
                        android:textColor="@color/colorText_10"
                        android:textSize="@dimen/label_tobig_size_20" />


                    <!-- 서비스 안내 layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_default_padding">

                        <!-- 서비스 안내 -->


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/guide_s_service"
                            android:textColor="@color/colorText_8"
                            android:textSize="@dimen/label_big_size" />


                        <!-- 서비스 안내 SUb 1 -->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가"
                                    android:textSize="@dimen/label_big_size"
                                    android:visibility="invisible"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:layout_width="@dimen/red_oval_dot_size"
                                    android:layout_height="@dimen/red_oval_dot_size"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/oval_grey"
                                    tools:ignore="ContentDescription" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_service_1"
                                android:textColor="@color/colorText_8"
                                android:textSize="@dimen/label_big_size" />

                        </LinearLayout>


                        <!-- 서비스 안내 SUb 2 -->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가"
                                    android:textSize="@dimen/label_big_size"
                                    android:visibility="invisible"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:layout_width="@dimen/red_oval_dot_size"
                                    android:layout_height="@dimen/red_oval_dot_size"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/oval_grey"
                                    tools:ignore="ContentDescription" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_service_2"
                                android:textColor="@color/colorText_8"
                                android:textSize="@dimen/label_big_size" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 정보입력(이름/주민등록번호) 라벨 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_input_info"
                        android:textColor="@color/colorText_10"
                        android:textSize="@dimen/label_tobig_size_20" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:splitMotionEvents="false">

                        <!-- 이름 입력 layout -->
                        <include
                            android:id="@+id/labelEditName"
                            layout="@layout/layout_label_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:labelFor="@+id/edtResident_1"
                                android:paddingLeft="10dp"
                                android:paddingTop="15dp"
                                android:textStyle="bold"
                                android:paddingRight="5dp"
                                android:paddingBottom="15dp"
                                android:text="@string/label_resident_number_s"
                                android:textSize="@dimen/label_small_size"
                                android:textColor="@color/colorText_9"
                                tools:ignore="RtlHardcoded" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:splitMotionEvents="false">


                                <EditText
                                    android:id="@+id/edtResident_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="@string/desc_edt_resident_first"
                                    android:gravity="center_vertical"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:minWidth="100dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/colorText_0"
                                    android:textSize="16dp"
                                    tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />

                                <View
                                    android:layout_width="15dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="7dp"
                                    android:background="#9e9e9e"
                                    tools:ignore="RtlHardcoded" />

                                <RelativeLayout
                                    android:id="@+id/resident_relInput"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.7"
                                    android:splitMotionEvents="false">

                                    <include
                                        android:id="@+id/resident_relInput_sub"
                                        layout="@layout/transkey_user_editbox_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true" />

                                </RelativeLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout

                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textLabelSmartService"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/label_agree_s_service"
                            android:textColor="@color/colorText_10"
                            android:textSize="@dimen/title_big_text_dp_size" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#084ebc"
                            android:letterSpacing="-0.02"
                            android:text="필수"/>


                    </LinearLayout>




                    <!-- 서비스 안내 layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_white"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_default_padding">

                        <!-- 서비스 안내 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_agree_s_service_comment"
                            android:textColor="@color/colorText_0"
                            android:textSize="@dimen/label_small_size" />

                        <!-- 동의1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_privacy_1_1"
                                android:textStyle="bold"
                                android:textColor="@color/colorText_9"
                                android:textSize="@dimen/label_small_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_privacy_1_2"
                                android:textColor="@color/colorText_8"
                                android:textSize="@dimen/label_small_size" />
                        </LinearLayout>

                        <!-- 동의2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_privacy_2_1"
                                android:textStyle="bold"
                                android:textColor="@color/colorText_9"
                                android:textSize="@dimen/label_small_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_privacy_2_2"
                                android:textColor="@color/colorText_8"
                                android:textSize="@dimen/label_small_size" />
                        </LinearLayout>

                        <!-- 동의3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_privacy_3_1"
                                android:textStyle="bold"
                                android:textColor="@color/colorText_9"
                                android:textSize="@dimen/label_small_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/guide_s_privacy_3_2"
                                android:textColor="@color/colorText_8"
                                android:textSize="@dimen/label_small_size" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_check_agree_s_service_footer"
                        android:textColor="@color/colorText_0"
                        android:textSize="@dimen/label_small_size" />

                    <!--<FrameLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:padding="3dp"-->
                    <!--android:background="@drawable/border_white">-->
                    <!--<com.epost.insu.control.WebViewInScroll-->
                    <!--android:id="@+id/webView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="85dp"-->
                    <!--android:background="@drawable/border_white"/>-->
                    <!--</FrameLayout>-->

                    <!-- 동의 체크 레이아웃 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">


                        <com.epost.insu.control.CustomCheckView
                            android:id="@+id/checkAgree"
                            android:layout_width="@dimen/check_view_size"
                            android:layout_height="@dimen/check_view_size"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="-5dp"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_toRightOf="@id/checkAgree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/label_check_agree_s_service"
                            android:textColor="@color/colorText_0"
                            android:textSize="@dimen/label_small_size"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />


                    </RelativeLayout>

                    <!-- dash line 구분선 -->
                    <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="5dp"-->
                    <!--android:src="@drawable/dash_line"-->
                    <!--android:layerType="software"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--tools:ignore="ContentDescription" />-->

                </LinearLayout>
                <!-- 확인 버튼 -->
                <include
                    layout="@layout/c_btn_fill_navy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/keypadContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <!-- mVaccine 키패드 click effect 포지션 위치를 위해 타이틀바 높이인 ?attr/actionBarSize 만큼 marginTop 적용 -->
    <RelativeLayout
        android:id="@+id/keypadBallon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</merge>
