<?xml version="1.0" encoding="utf-8"?>

<!-- TextView | EditText 로 구성된 레이아웃 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:id="@+id/label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/edit"
        android:textSize="@dimen/label_small_size"
        android:textColor="@color/colorText_9"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        tools:ignore="DuplicateIncludedIds,RtlHardcoded"
        tools:text="[항목명]"/>



    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/label_big_dp_size"
        android:textColor="@color/colorText_0"
        android:textColorHint="@color/colorHint"
        android:inputType="text"
        android:maxLines="1"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:saveEnabled="false"
        android:background="@android:color/transparent"
        tools:text="[항목내용]"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa">
    </View>
</LinearLayout>