<?xml version="1.0" encoding="utf-8"?>

<!-- 주소 목록 List Item View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/border_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">




    <TextView

        tools:text="우편번호"
        android:id="@+id/textZipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_small_size"
        android:textColor="@color/colorText_9"
        android:gravity="left"
        android:layout_gravity="center_vertical"
        />


        <TextView
            android:layout_marginTop="10dp"
            tools:text="전라남도 나주시 정보화길 1 (빛가람동,\n
우정사업정보센터)"
            android:id="@+id/textAddrRoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_small_size"
            android:textColor="@color/colorText_9"
            android:paddingRight="10dp"/>

        <TextView

            android:layout_marginTop="5dp"
            tools:text="전라남도 나주시 빛가람동 219\n 우정사업정보센터"
            android:id="@+id/textAddrBunji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_small_size"
            android:textColor="@color/colorText_9"
            android:paddingRight="10dp"/>

</LinearLayout>