<?xml version="1.0" encoding="utf-8"?>

<!-- TextView | TextView | Button 로 구성된 레이아웃 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_small_size"
        android:textColor="@color/colorText_9"
        android:gravity="left"

        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        tools:ignore="DuplicateIncludedIds,RtlHardcoded" />

    <include
        layout="@layout/line_view_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="@dimen/label_small_size"
            android:textColor="@color/colorText_0"
            android:textColorHint="#666666"
            android:padding="15dp"
            tools:ignore="DuplicateIncludedIds" />

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_r"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/label_small_size"
            android:textColor="@color/colorText_6"
            android:textColorHint="#666666"
            android:layout_margin="5dp"
            />
    </LinearLayout>

</LinearLayout>