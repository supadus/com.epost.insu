<?xml version="1.0" encoding="utf-8"?>

<!-- 보험금청구 > 보험금청구 > 보험청구서작성(청구내용2) (화면 ID : IUII16M00) - #52 에서 사용하는 보험사 입력 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_default_dp_size"
        android:textColor="@color/colorText_0"
        android:text="@string/label_insure_name"
        android:layout_gravity="center_vertical"
        tools:ignore="SpUsage" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:textSize="@dimen/label_default_dp_size"
        android:textColor="@color/colorText_0"
        android:hint="@string/hint_input_company"
        android:inputType="text"
        android:saveEnabled="false"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:background="@drawable/border_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        tools:ignore="RtlHardcoded,SpUsage" />

    <ImageButton
        android:id="@+id/btnDel"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close_2"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_img_remove"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />

</LinearLayout>