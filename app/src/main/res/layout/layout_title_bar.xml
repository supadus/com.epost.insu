<!-- 타이틀바 레이아웃 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar_root"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    tools:ignore="Overdraw">

    <!-- Left : 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/title_bar_imgBtnLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/desc_back"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_prev" />


    <!-- 텍스트 타이틀 -->
    <TextView
        android:id="@+id/title_bar_textTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:letterSpacing="-0.03"

        android:lineSpacingExtra="8sp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="타이틀" />

    <!-- Right : 버튼 -->
    <ImageButton
        android:id="@+id/title_bar_imgBtnRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_close_3"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:scaleType="centerCrop"

        tools:ignore="ContentDescription,RtlHardcoded" />



    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee">
    </View>

</RelativeLayout>